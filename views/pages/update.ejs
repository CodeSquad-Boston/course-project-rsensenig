<%- include('../partials/head') -%>

<%- include('../partials/nav') -%>

    <main>
        <div class="container">
            <h1>Update Comic</h1>
            <div class="form-container">
                <form action="/" method="post">
                    <div>
                        <label for="title">Title:</label>
                        <input type="text" name="title" id="title" value="<%= singleBook.title %>">
                    </div>
                    <div>
                        <label for="author">Author:</label>
                        <input type="text" name="author" id="author" value="<%= singleBook.author %>">
                    </div>
                    <div>
                        <label for="publisher">Publisher:</label>
                        <select name="publisher" id="publisher">
                            <option value="" selected disabled>publisher value stored in database</option>
                            <option value="BOOM!Box">BOOM! Box</option>
                            <option value="DCComics">DC Comics</option>
                            <option value="HarryNAbrams">Harry N. Abrams</option>
                            <option value="IconBooks">Icon Books</option>
                            <option value="ImageComics">Image Comics</option>
                            <option value="Marvel">Marvel</option>
                            <option value="Simon&Schuster">Simon & Schuster</option>
                            <option value="TopShelfProductions">Top Shelf Productions</option>
                            <option value="VIZMediaLLC">VIZ Media LLC</option>
                        </select>
                    </div>
                    <div>
                        <label for="genre">Genre:</label>
                        <input type="text" name="genre" id="genre" value="<%= singleBook.genre %>">
                    </div>
                    <div>
                        <label for="NumberOfPages">Number of pages:</label>
                        <input type="number" name="NumberOfPages" id="NumberOfPages" value="<%= singleBook.pages %>" placeholder="pages stored in database">
                    </div>
                    <div>
                        <label for="rating">Rating:</label>
                        <input type="number" name="rating" id="rating" value="<%= singleBook.rating %>" placeholder="rating stored in database">
                    </div>
                    <div>
                        <label for="synopsis">Synopsis:</label>
                        <textarea name="synopsis" id="synopsis" rows="2" cols="20">synopsis value stored in database</textarea>
                    </div>
                    <div>
                        <label for="comic-image">Image:</label>
                        <input type="text" name="comic-image" id="comic-image" value="<%= singleBook.image %>">
                    </div>
                    <input type="submit" value="Submit">
                </form>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') -%>
    
</html>